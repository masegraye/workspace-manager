// NewStatusCommandNew demonstrates the new service architecture for status checking
func NewStatusCommandNew() *cobra.Command {
	var (
		jsonOutput bool
		detailed   bool
	)

	cmd := &cobra.Command{
		Use:   "status-new [workspace-path]",
		Short: "Get workspace status using the new architecture",
		Args:  cobra.MaximumNArgs(1),
		RunE: func(cmd *cobra.Command, args []string) error {
			// Build dependencies using production implementations
			deps := service.NewDeps()
			workspaceService := service.NewWorkspaceService(deps)

			// Determine workspace path
			workspacePath := "."
			if len(args) > 0 {
				workspacePath = args[0]
			}

			// Load workspace metadata (this would be implemented properly)
			workspace, err := loadWorkspaceFromPath(workspacePath, deps)
			if err != nil {
				return errors.Wrap(err, "failed to load workspace")
			}

			// Get workspace status using the new service
			status, err := workspaceService.GetWorkspaceStatus(cmd.Context(), *workspace)
			if err != nil {
				return errors.Wrap(err, "failed to get workspace status")
			}

			// Output the results
			if jsonOutput {
				return outputStatusJSON(status)
			}

			return outputStatusHuman(status, detailed)
		},
	}

	cmd.Flags().BoolVar(&jsonOutput, "json", false, "Output status in JSON format")
	cmd.Flags().BoolVar(&detailed, "detailed", false, "Show detailed repository information")

	return cmd
}

// NewSyncCommandNew demonstrates the new service architecture for sync operations
func NewSyncCommandNew() *cobra.Command {
	var (
		pull   bool
		push   bool
		rebase bool
		dryRun bool
	)

	cmd := &cobra.Command{
		Use:   "sync-new [workspace-path]",
		Short: "Sync workspace repositories using the new architecture",
		Args:  cobra.MaximumNArgs(1),
		RunE: func(cmd *cobra.Command, args []string) error {
			// Build dependencies using production implementations
			deps := service.NewDeps()
			workspaceService := service.NewWorkspaceService(deps)

			// Determine workspace path
			workspacePath := "."
			if len(args) > 0 {
				workspacePath = args[0]
			}

			// Load workspace metadata
			workspace, err := loadWorkspaceFromPath(workspacePath, deps)
			if err != nil {
				return errors.Wrap(err, "failed to load workspace")
			}

			// If neither pull nor push specified, just fetch
			if !pull && !push {
				deps.Logger.Info("No sync operations specified, fetching all repositories")
				return workspaceService.FetchWorkspace(cmd.Context(), *workspace)
			}

			// Sync workspace using the new service
			results, err := workspaceService.SyncWorkspace(cmd.Context(), *workspace, sync.SyncOptions{
				Pull:   pull,
				Push:   push,
				Rebase: rebase,
				DryRun: dryRun,
			})
			if err != nil {
				return errors.Wrap(err, "failed to sync workspace")
			}

			// Output the results
			return outputSyncResults(results, deps)
		},
	}

	cmd.Flags().BoolVar(&pull, "pull", false, "Pull changes from remote")
	cmd.Flags().BoolVar(&push, "push", false, "Push changes to remote")
	cmd.Flags().BoolVar(&rebase, "rebase", false, "Use rebase instead of merge when pulling")
	cmd.Flags().BoolVar(&dryRun, "dry-run", false, "Show what would be done without actually doing it")

	return cmd
}

// NewDiscoverCommandNew demonstrates the new service architecture for discovery
func NewDiscoverCommandNew() *cobra.Command {
	var (
		recursive bool
		maxDepth  int
		paths     []string
	)

	cmd := &cobra.Command{
		Use:   "discover-new [paths...]",
		Short: "Discover repositories using the new architecture",
		RunE: func(cmd *cobra.Command, args []string) error {
			// Build dependencies using production implementations
			deps := service.NewDeps()
			workspaceService := service.NewWorkspaceService(deps)

			// Use provided paths or default to current directory
			discoveryPaths := paths
			if len(args) > 0 {
				discoveryPaths = args
			}
			if len(discoveryPaths) == 0 {
				discoveryPaths = []string{"."}
			}

			deps.Logger.Info("Starting repository discovery", 
				ux.Field("paths", discoveryPaths),
				ux.Field("recursive", recursive),
				ux.Field("maxDepth", maxDepth))

			// Discover repositories using the new service
			err := workspaceService.DiscoverRepositories(cmd.Context(), discoveryPaths, recursive, maxDepth)
			if err != nil {
				return errors.Wrap(err, "failed to discover repositories")
			}

			// List discovered repositories
			repositories, err := workspaceService.ListRepositories()
			if err != nil {
				return errors.Wrap(err, "failed to list repositories")
			}

			deps.Logger.Info("Discovery completed", ux.Field("count", len(repositories)))

			// Output discovered repositories
			for _, repo := range repositories {
				fmt.Printf("ðŸ“ %s (%s)\n", repo.Name, repo.Path)
				if len(repo.Categories) > 0 {
					fmt.Printf("   Categories: %v\n", repo.Categories)
				}
				if repo.RemoteURL != "" {
					fmt.Printf("   Remote: %s\n", repo.RemoteURL)
				}
				fmt.Println()
			}

			return nil
		},
	}

	cmd.Flags().BoolVar(&recursive, "recursive", true, "Search recursively in subdirectories")
	cmd.Flags().IntVar(&maxDepth, "max-depth", 3, "Maximum depth for recursive search")
	cmd.Flags().StringSliceVar(&paths, "paths", nil, "Paths to search for repositories")

	return cmd
}

// Helper functions

func loadWorkspaceFromPath(path string, deps *service.Deps) (*domain.Workspace, error) {
	// This is a simplified implementation
	// In practice, this would load workspace metadata from .wsm/wsm.json
	return &domain.Workspace{
		Name: "example-workspace",
		Path: path,
		Repositories: []domain.Repository{
			{Name: "repo1", Path: "/path/to/repo1"},
			{Name: "repo2", Path: "/path/to/repo2"},
		},
		Branch: "main",
	}, nil
}

func outputStatusJSON(status *domain.WorkspaceStatus) error {
	data, err := json.MarshalIndent(status, "", "  ")
	if err != nil {
		return err
	}
	fmt.Println(string(data))
	return nil
}

func outputStatusHuman(status *domain.WorkspaceStatus, detailed bool) error {
	fmt.Printf("Workspace: %s\n", status.Workspace.Name)
	fmt.Printf("Overall Status: %s\n", status.Overall)
	fmt.Printf("Repositories: %d\n\n", len(status.Repositories))

	for _, repo := range status.Repositories {
		fmt.Printf("ðŸ“ %s\n", repo.Repository.Name)
		if repo.CurrentBranch != "" {
			fmt.Printf("   Branch: %s\n", repo.CurrentBranch)
		}
		if repo.HasChanges {
			fmt.Printf("   âš ï¸  Has uncommitted changes\n")
		}
		if repo.HasConflicts {
			fmt.Printf("   âŒ Has conflicts\n")
		}
		if repo.Ahead > 0 || repo.Behind > 0 {
			fmt.Printf("   ðŸ”„ Ahead: %d, Behind: %d\n", repo.Ahead, repo.Behind)
		}

		if detailed {
			if len(repo.StagedFiles) > 0 {
				fmt.Printf("   Staged files: %v\n", repo.StagedFiles)
			}
			if len(repo.ModifiedFiles) > 0 {
				fmt.Printf("   Modified files: %v\n", repo.ModifiedFiles)
			}
			if len(repo.UntrackedFiles) > 0 {
				fmt.Printf("   Untracked files: %v\n", repo.UntrackedFiles)
			}
		}
		fmt.Println()
	}

	return nil
}

func outputSyncResults(results []sync.SyncResult, deps *service.Deps) error {
	for _, result := range results {
		if result.Success {
			deps.Logger.Info("Repository sync completed", 
				ux.Field("repo", result.Repository),
				ux.Field("pulled", result.Pulled),
				ux.Field("pushed", result.Pushed))
		} else {
			deps.Logger.Error("Repository sync failed", 
				ux.Field("repo", result.Repository),
				ux.Field("error", result.Error))
		}
	}
	return nil
}
